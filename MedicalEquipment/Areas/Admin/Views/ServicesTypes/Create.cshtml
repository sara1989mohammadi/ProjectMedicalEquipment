@model MedicalEquipment.Web.Models.ServicesType

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<hr />
<div class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title">ثبت نوع سرویس</h3>
    </div>
    <div class="box-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tittle" class="control-label"></label>
                <input asp-for="Tittle" class="form-control" />
                <span asp-validation-for="Tittle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service_Id" class="control-label"></label>
                <select asp-for="Service_Id" class="form-control" asp-items="ViewBag.Service_Id"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-success" />  |
                <a asp-action="Index">برگشت به صفحه اصلی</a>
            </div>
        </form>
    </div>
</div>




